<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mygit.UI.controller.CommitController"
            style="-fx-padding: 10;">

    <!-- Header -->
    <top>
        <Label text="Commit Changes"
               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    </top>

    <!-- Center -->
    <center>
        <SplitPane dividerPositions="0.5">

            <!-- Left: Working Tree -->
            <VBox spacing="5" style="-fx-padding: 5;">
                <Label text="Modified / Untracked Files"/>
                <ListView fx:id="workingFiles"/>
                <Button text="Stage Selected" onAction="#stageSelected"/>
            </VBox>

            <!-- Right: Index -->
            <VBox spacing="5" style="-fx-padding: 5;">
                <Label text="Staged Files"/>
                <ListView fx:id="stagedFiles"/>
                <Button text="Unstage Selected" onAction="#unstageSelected"/>
            </VBox>

        </SplitPane>
    </center>

    <!-- Bottom -->
    <bottom>
        <VBox spacing="5">
            <Label text="Commit Message"/>
            <TextArea fx:id="commitMessage" prefRowCount="3"/>
            <Button text="Commit" onAction="#commit"/>
        </VBox>
    </bottom>

</BorderPane>
