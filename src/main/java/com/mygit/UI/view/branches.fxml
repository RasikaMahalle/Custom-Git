<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      style="-fx-padding: 10;"
      fx:controller="com.mygit.UI.controller.BranchController">

    <Label text="Branches"
           style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <ListView fx:id="branchList"
              prefHeight="250"/>

    <HBox spacing="10">
        <Button text="New Branch" onAction="#createBranch"/>
        <Button text="Switch" onAction="#switchBranch"/>
        <Button text="Delete" onAction="#deleteBranch"/>
    </HBox>

</VBox>
