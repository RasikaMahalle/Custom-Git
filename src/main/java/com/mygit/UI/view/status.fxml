<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      style="-fx-padding: 10;"
      fx:controller="com.mygit.UI.controller.StatusController">

    <Label text="Git Status"
           style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <TitledPane text="Staged Files" expanded="true">
        <ListView fx:id="stagedList"/>
    </TitledPane>

    <TitledPane text="Modified Files" expanded="true">
        <ListView fx:id="modifiedList"/>
    </TitledPane>

    <TitledPane text="Untracked Files" expanded="true">
        <ListView fx:id="untrackedList"/>
    </TitledPane>

</VBox>
