<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.mygit.UI.controller.DiffController"
            style="-fx-padding: 10;">

    <!-- Header -->
    <top>
        <HBox spacing="10">
            <Label text="Diff Viewer"
                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <CheckBox fx:id="stagedOnlyCheck" text="Staged (--staged)"/>
        </HBox>
    </top>

    <!-- Left: File list -->
    <left>
        <VBox spacing="5" style="-fx-padding: 5;">
            <Label text="Changed Files"/>
            <ListView fx:id="fileList"
                      prefWidth="200"
                      onMouseClicked="#onFileSelected"/>
        </VBox>
    </left>

    <!-- Right: Diff output -->
    <center>
        <TextArea fx:id="diffArea"
                  editable="false"
                  wrapText="false"
                  style="-fx-font-family: 'Consolas'; -fx-font-size: 12;"/>
    </center>

</BorderPane>
